#!/bin/sh

# Obtén el directorio base de forma segura, manejando espacios en las rutas
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

# Detecta si está en un entorno Windows como Cygwin, MinGW o MSYS
case "$(uname)" in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=$(cygpath -w "$basedir")
        fi
    ;;
esac

# Ejecuta el nodo local si existe, si no, usa el global
if [ -x "$basedir/node" ]; then
    exec "$basedir/node" "$basedir/../mime/cli.js" "$@"
else
    exec node "$basedir/../mime/cli.js" "$@"
fi
